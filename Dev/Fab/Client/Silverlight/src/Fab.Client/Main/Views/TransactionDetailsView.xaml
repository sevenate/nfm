<!--						<TextBlock Text="{Binding Name}" />-->
<!--					</DataTemplate>-->
<!--				</sdk:AutoCompleteBox.ItemTemplate>-->
<!--			</sdk:AutoCompleteBox>-->
			<Controls:AutoCompleteComboBox ItemsSource="{Binding Categories}"
										   ValueMemberBinding="{Binding Name}"
										   MinimumPrefixLength="0"
										   IsTextCompletionEnabled="True"
										   FilterMode="Custom"
										   ItemFilter="{Binding CategoryFilter}"
										   SelectedItemBinding="{Binding CurrentCategory, Mode=TwoWay}">
				<Controls:AutoCompleteComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</Controls:AutoCompleteComboBox.ItemTemplate>
			</Controls:AutoCompleteComboBox>
			<TextBlock TextWrapping="Wrap"
					   Text="Comment" />
			<TextBox x:Name="Comment"
					 MaxLength="255"
					 TextWrapping="Wrap"
					 Height="100"
					 Text="{Binding Path=Comment, Mode=TwoWay}" />
			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Right">
				<Button x:Name="Save"
						Content="{Binding Path=IsEditMode, Converter={StaticResource AddUpdateStringConverter}}"
						MinWidth="75"
						MinHeight="23"
						HorizontalAlignment="Right" />
				<Button x:Name="Clear"
						Content="{Binding Path=IsEditMode, Converter={StaticResource CancelClearStringConverter}}"
						MinWidth="75"
						MinHeight="23"
						Margin="5,0,0,0"
						HorizontalAlignment="Right" />
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
